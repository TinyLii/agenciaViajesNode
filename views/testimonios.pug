extends ./layout/index

block contenido
    main.container.mt-5     
        h1(class="mt-5 text-center") #{pagina}

        blockquote.text-center Lee sobre nuestros clientes y sus experiencias
            include ./layout/bloque_testimonios

        .row    
            .col-md-12
                h2.d-block.w-100.text-center Agrega un testimonio

                if(errores)
                    each error in errores
                        .alert.col.alert-danger.text-center= error.mensaje

            .row.justify-content-center.col 
                .col-md-8 
                    form(action="/testimonios" method="POST")
                        .form-group 
                            label(for="nombre") Nombre 
                            input#nombre(type="text", placeholder="Tu nombre",value=nombre, name="nombre", class="form-control")
                        .form-group 
                            label(for="correo") Correo Electr√≥nico 
                            input#correo(type="text", placeholder="Tu correo",value=correo, name="correo", class="form-control")
                        .form-group 
                            label(for="mensaje") Mensaje
                            textarea#mensaje(class="form-control", placeholder="Tu mensaje", name="mensaje", rows= 3)= mensaje
                        
                        input.btn.btn-success.btn-block(type="submit")